<%= form_for Post.new do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
     <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
    <div class="form-group">
        <%= f.label :uid %>
    <%= f.text_field :user_id, value: current_user.id, class:'d-none'%>
  </div>
    <br>
  <div class="text-center">
    <%= f.submit 'Create Vote', class: 'btn btn-primary' %>
  </div>
<% end %>
