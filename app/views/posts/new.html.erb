<%= form_for Post.new do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
     <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
    <div class="form-group">
    <%= f.text_field :user_id, value: current_user.id, style: 'display:none'%>
  </div>
  <br>

  <p>Choice Create</p>

  <%= f.file_field :images , style: 'display:none'%>
  <%= fields_for :choices do |builder| %>
        <%= render 'choice_fields', f:builder %>
  <% end %>

  <div class ="links">   
  <%= link_to_add_association "Add Choices", f, :choices, class: 'btn btn-default btn-lg'%>
  </div>


  <div class="text-center">
    <%= f.submit 'Create Vote', class: 'btn btn-primary' %>
  </div>
<% end %>




