<p>Choice Create</p>
<%= form_for Choice.new do |f| %>
  <div class="form-group">
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.file_field :images %>
  </div>
    <div class="form-group">
    <%= f.text_field :topic_id %>
  </div>
    <br>
  <div class="text-center">
    <%= f.submit 'Create Choice', class: 'btn btn-primary' %>
  </div>
<% end %>