<p>Choice Create</p>
<%= form_for Choice.new do |f| %>
  <div class="form-group">
      <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
      <%= f.label :images %>
    <%= f.file_field :images %>
  </div>
    <div class="form-group">
        <%= f.label :tid %>
    <%= f.text_field :topic_id, value: current_post.id %>
  </div>
    <br>
  <div class="text-center">
    <%= f.submit 'Create Choice', class: 'btn btn-primary' %>
  </div>
<% end %>