<div class="posts">
  <% @posts.each do |post| %>
    <section class="post">
      <div class="user">
    <div class="avatar">
      <%= image_tag ("snoopy.jpg") %>
    </div>
    <div class="username">
      <%= post.user.username %>
    </div>
      </div>
  
  
  <% if post.image.attached? %>
           <%= link_to(image_tag(url_for(post.image)), post_path(post.id)) %>
           <% end %>
        
    <div class="description">
    <%= post.description %>
    </div>

      
    </section>
  <% end %>
</div>
