<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <%= image_tag ("snoopy.jpg") %>
      </div>
    </div>
    
    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username">
          <%= current_user.name %>
          <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
              <button>Edit Profile</button>
          </a>
        </h2>
        
      </div>
      <ul class="posts">
        <li><span>

          <%= Post.Corresponding_Posts(current_user).count %>

        </span> posts</li>
        <li><span>195</span> followers</li>
        <li><span>345</span> following</li>
      </ul>
      <h2 class="name">
        <%= current_user.name %>
      </h2>
      <a class="website">
        <%= current_user.website %>
      </a>
    </div>
  </div>
</div>

<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>
</div>

<div class="user-images">
   <% Post.Corresponding_Posts(current_user).each do |post| %>
    <div class="wrapper">
       
      <% if post.image.attached? %>
        <%= link_to(image_tag(url_for(post.image), :size => "200x300"), post_path(post.id)) %>
          
        <% end %>
    </div>
  <% end %>
</div>
